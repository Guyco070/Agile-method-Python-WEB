pipeline {
    agent { 
        docker{
            image 'python:3.7' 
        } 
    }
    stages {
        stage('build') 
        {
            steps 
            {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'python -m pip install --upgrade pip setuptools wheel'
                    sh 'python -m pip install -r requirements.txt'

                    //sh 'python manage.py makemigrations'
                    //sh 'python manage.py migrate'
                    // pipeline build command to check later
                }
            }
        }
        stage('Test') 
        {
            steps 
            {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'python manage.py test'
                }
            }
        }
       
        stage('Pylint Results') {
            steps{
                recordIssues(tools: [pyLint(pattern: 'reports/pylint.report')])
            }
        }
        stage('Pyflakes8 Results') {
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'python -m pip install flake8'
                    sh 'python -m flake8 Agile/views.py'
                }
                //recordIssues(tools: [flake8(pattern: 'reports/pyflakes.report',args: ["--ignore", "E501"])]) // --ignore E501 is to ignore Error for lines longer of 79 letters
            }
        }
    }
    
     post {
        failure {
            withEnv(["HOME=${env.WORKSPACE}"]) {
                withCredentials([string(credentialsId: 'MAIL_PASS', variable: 'PASS_ONLY')]) {
		    echo "${currentBuild.fullDisplayName} AAAA ${currentBuild.result} BBBB ${env.BUILD_URL}"
                    //sh 'python3 send_mail.py "Jenkins Build ${currentBuild.fullDisplayName} ${currentBuild.result}" "The last build failed, check it! url: ${env.BUILD_URL}"'
                    sh 'python3 send_mail.py'
		        }
            }
            mail bcc: '', body: 'The last build failed, check it!', cc: 'yarinaf1@gmail.com', from: 'gaico070@gmail.com', replyTo: '', subject: 'Jenkins Build Failure', to: 'gaico070@gmail.com'
        }
        /*
        failure{
			emailext body: 'Test Message',
    			subject: 'Test Subject',
    			to: 'navesh@ac.sce.ac.il'
		}
		success{
			emailext body: 'Test Message',
    			subject: 'Test Subject',
    			to: 'navesh@ac.sce.ac.il'
		}
        */
    }
}
